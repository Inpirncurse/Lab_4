<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inpir.lab_4.TorchActivity">

    <Button
        android:id="@+id/button_torch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Torch"
        app:layout_constraintBottom_toTopOf="@+id/buttonOff"
        app:layout_constraintEnd_toEndOf="@+id/buttonOff"
        app:layout_constraintStart_toStartOf="@+id/buttonOff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />


    <Button
        android:id="@+id/buttonOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:text="off"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_torch" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonOff"
        app:layout_constraintStart_toStartOf="@+id/buttonOff"
        app:layout_constraintTop_toBottomOf="@+id/buttonOff" />


</android.support.constraint.ConstraintLayout>
